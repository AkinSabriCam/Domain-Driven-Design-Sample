@page "{Id?}"

@model Exercise.Web.Pages.Companies.UpdateModel
@{
}

<form asp-page="/Companies/Update" method="post">

    <div class="form-group">
        <label>Company Name</label>
        <input asp-for="CompanyModel.CompanyName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Foundation Date</label>
        <input asp-for="CompanyModel.FoundationDate" class="form-control" />
    </div>


    <div class="form-group">
        <label>Head Quarters</label>
        <input asp-for="CompanyModel.HeadQuarters" class="form-control" />
    </div>

    <div class="form-group">
        <label>Employers Count</label>
        <input asp-for="CompanyModel.EmployersCount" class="form-control" />
    </div>

    <input type="hidden" asp-for="CompanyModel.Id" />

    <button type="submit" class="btn-dark">Update</button>
</form>