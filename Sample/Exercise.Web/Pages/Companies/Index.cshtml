@page
@model Exercise.Web.Pages.Companies.IndexModel
@{
}
<h1>Company Page</h1>

<form asp-page="/Companies/Create" method="get">
    <button type="submit" class="btn-danger">New Company</button>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Head Quarters</th>
            <th>Foundation Date</th>
            <th>Employers Count</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model.Companies)
        {
            <tr>

                <td>@company.CompanyName</td>
                <td>@company.HeadQuarters</td>
                <td>@company.FoundationDate.ToShortDateString()</td>
                <td>@company.EmployersCount</td>
                <td>
                    <form asp-page="/Companies/Update" asp-route-id="@company.Id" method="get">
                        <button type="submit" class="btn btn-warning">Update</button>
                    </form>
                </td>
                <td>
                    <form asp-page="/Companies/AddBus" asp-route-id="@company.Id" method="get">
                        <button type="submit" class="btn btn-secondary">Add Bus</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>

</table>