@page "{Id?}"
@model Exercise.Web.Pages.Buses.UpdateModel
@{
}

<form asp-page="/Buses/Update" method="post">

    <div class="form-group">
        <label>Mark</label>
        <input asp-for="BusModel.Mark" class="form-control" />
    </div>

    <div class="form-group">
        <label>Expedition Number</label>
        <input asp-for="BusModel.ExpeditionNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>Route</label>
        <input asp-for="BusModel.Route" class="form-control" />
    </div>

    <div class="form-group">
        <label>Color</label>
        <input asp-for="BusModel.Color" class="form-control" />
    </div>

    <div class="form-group">
        <label>Plate</label>
        <input asp-for="BusModel.Plate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Release Date</label>
        <input asp-for="BusModel.ProductionDate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Km</label>
        <input asp-for="BusModel.Km" class="form-control" />
    </div>


    <div class="form-group">
        <label>Seat Count</label>
        <input asp-for="BusModel.SeatCount" class="form-control" />
    </div>

    <input type="hidden" asp-for="BusModel.Id" />
    <input type="hidden" asp-for="BusModel.CompanyId" />

    <button type="submit" class="btn-dark">Update</button>
</form>